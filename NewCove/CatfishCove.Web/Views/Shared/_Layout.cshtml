@using System.Web.Optimization
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/bundles/semantic-ui")
    <link href="~/css/homepage.css" rel="stylesheet" />
  </head>
  <body>
    <div id="home">
      <div class="ui inverted page grid masthead segment">
        <div class="column">
          <div class="inverted teal pointing ui menu">
            <a href="@Url.Action("Index", "Home")" class="item">Catfish Cove Seafood</a>
            <div class="right menu">
              <div class="ui top right pointing mobile simple dropdown link item">
                Menu
                <i class="dropdown icon"></i>
                <div class="menu ui simple hidden">
                  <a href="@Url.Action("Index", "Home")" class="item">
                    <i class="home icon"></i> Home
                  </a>
                  <a href="@Url.Action("Index", "Menu")" class="item">
                    <i class="food icon"></i> Menu
                  </a>
                  <a href="@Url.Action("Index", "Buffet")" class="item">
                    <i class="calendar icon"></i> Sunday Buffet
                  </a>
                  <a href="@Url.Action("Catering", "Home")" class="item">
                    <i class="truck icon"></i> Catering
                  </a>
                  <a href="@Url.Action("Directions", "Home")" class="item">
                    <i class="road icon"></i> Directions
                  </a>
                  <a href="@Url.Action("Contact", "Home")" class="item">
                    <i class="phone icon"></i> Contact
                  </a>
                </div>
              </div>
              <a href="@Url.Action("Index", "Home")" class="item">
                <i class="home icon"></i> Home
              </a>
              <a href="@Url.Action("Index", "Menu")" class="item">
                <i class="food icon"></i> Menu
              </a>
              <a href="@Url.Action("Index", "Buffet")" class="item">
                <i class="calendar icon"></i> Sunday Buffet
              </a>
              <a href="@Url.Action("Catering", "Home")" class="item">
                <i class="truck icon"></i> Catering
              </a>
              <a href="@Url.Action("Directions", "Home")" class="item">
                <i class="road icon"></i> Directions
              </a>
              <a href="@Url.Action("Contact", "Home")" class="item">
                <i class="phone icon"></i> Contact
              </a>
            </div>
          </div>
          @RenderSection("AnnoucementSection", false)
        </div>
      </div>
      
      <div class="ui page grid">
        @RenderBody()
      </div>
      <div class="ui inverted teal page grid segment">
        <div class="ui three column stackable grid">
          <div class="column">
            <div class="ui header">&copy; @DateTime.Now.Year Catfish Cove</div>
          </div>
          <div class="six wide right floated aligned column">
            <h3 class="ui header"><a class="contact-link" href="@Url.Action("Contact", "Home")">Contact Us</a></h3>
            <address>
              1401 Armstrong Ford Rd <br />
              Belmont, NC, 28012 <br />
            </address>
            <p class="contact-link">704-825-3332</p>
          </div>
        </div>
      </div>
    </div>
</body>
</html>
