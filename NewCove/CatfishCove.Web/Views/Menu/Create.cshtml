@model CatfishCove.Web.Models.MenuItem

@{
  ViewBag.Title = "Create";
}

<div class="ui sixteen wide column">
  <header>
    <h1>Create Menu Item</h1>
  </header>
  <div class="ui form segment">
  @using (Html.BeginForm())
  {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="field">
      @Html.LabelFor(model => model.Name)
      <div class="ui left labeled icon input">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, string.Empty, new { @class = "error" })
      </div>
    </div>

    <div class="field">
      @Html.LabelFor(model => model.Description)
      <div class="ui left labeled icon input">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
      </div>
    </div>

    <div class="field">
      @Html.LabelFor(model => model.FoodType)
      <div class="ui left labeled icon input">
        @Html.DropDownListFor(model => model.FoodType.Id, (SelectList)ViewBag.FoodTypes)
        @Html.ValidationMessageFor(model => model.FoodType)
      </div>
    </div>

    <div class="field">
      @Html.LabelFor(model => model.HalfOrderPrice)
      <div class="ui left labeled icon input">
        @Html.EditorFor(model => model.HalfOrderPrice)
        @Html.ValidationMessageFor(model => model.HalfOrderPrice)
      </div>
    </div>

    <div class="field">
      @Html.LabelFor(model => model.WholeOrderPrice)
      <div class="ui left labeled icon input">
        @Html.EditorFor(model => model.WholeOrderPrice)
        @Html.ValidationMessageFor(model => model.WholeOrderPrice)
      </div>
    </div>

    <input type="submit" value="Create" class="ui button teal" />

  }
</div>
  <div>
    <br />
    @Html.ActionLink("Back to List", "Index")
  </div>

</div>