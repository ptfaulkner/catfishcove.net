@model CatfishCove.Models.MenuItem

@{
    ViewBag.Title = "Create";
}

<div class="page-header">
    <h1>Create Menu Item</h1>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="clearfix">
            @Html.LabelFor(model => model.Name)
            <div class="input">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.Description)
            <div class="input">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
       </div>
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.FoodType)
            <div class="input">
            @Html.DropDownListFor(model => model.FoodType.Id, (SelectList)ViewBag.FoodTypes)
            @Html.ValidationMessageFor(model => model.FoodType)
       </div>
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.HalfOrderPrice)
            <div class="input">
            @Html.EditorFor(model => model.HalfOrderPrice)
            @Html.ValidationMessageFor(model => model.HalfOrderPrice)
       </div>
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.WholeOrderPrice)
            <div class="input">
            @Html.EditorFor(model => model.WholeOrderPrice)
            @Html.ValidationMessageFor(model => model.WholeOrderPrice)
       </div>
        </div>

        <div class="actions">
            <input type="submit" value="Create" class="btn primary" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

