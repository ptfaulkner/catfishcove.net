<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewBag.Title</title>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'>
  <environment include="Development">
    <link rel="stylesheet" href="~/css/semantic-ui.css" />
    <link rel="stylesheet" href="~/css/site.css" />
  </environment>
  <environment exclude="Development">
    <link rel="stylesheet" href="~/css/semantic-ui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
  </environment>
  <link href="~/css/homepage.css" rel="stylesheet" />
</head>
<body>
  <div id="home">
    <div class="ui inverted page grid masthead segment">
      <div class="column">
        <div class="inverted teal pointing ui menu">
          <a asp-controller="Home" asp-action="Index" class="item">Catfish Cove Seafood</a>
          <div class="right menu">
            <div id="mobile-menu" class="ui top right pointing mobile simple dropdown link item">
              Menu
              <i class="dropdown icon"></i>
              <div class="menu ui simple hidden ">
                <a asp-controller="Home" asp-action="Index" class="item">
                  <i class="home icon"></i> Home
                </a>
                <a asp-controller="Menu" asp-action="Index" class="item">
                  <i class="food icon"></i> Menu
                </a>
                <a asp-controller="Buffet" asp-action="Index" class="item">
                  <i class="calendar icon"></i> Sunday Buffet
                </a>
                <a asp-controller="Home" asp-action="Catering" class="item">
                  <i class="truck icon"></i> Catering
                </a>
                <a asp-controller="Home" asp-action="Directions" class="item">
                  <i class="road icon"></i> Directions
                </a>
                <a asp-controller="Home" asp-action="Contact" class="item">
                  <i class="phone icon"></i> Contact
                </a>
              </div>
            </div>
            <a asp-controller="Home" asp-action="Index" class="item">
              <i class="home icon"></i> Home
            </a>
            <a asp-controller="Menu" asp-action="Index" class="item">
              <i class="food icon"></i> Menu
            </a>
            <a asp-controller="Buffet" asp-action="Index" class="item">
              <i class="calendar icon"></i> Sunday Buffet
            </a>
            <a asp-controller="Home" asp-action="Catering" class="item">
              <i class="truck icon"></i> Catering
            </a>
            <a asp-controller="Home" asp-action="Directions" class="item">
              <i class="road icon"></i> Directions
            </a>
            <a asp-controller="Home" asp-action="Contact" class="item">
              <i class="phone icon"></i> Contact
            </a>
          </div>
        </div>
        @RenderSection("AnnoucementSection", false)
      </div>
    </div>

    <div class="ui page grid">
      @RenderBody()
    </div>
    <div class="ui inverted teal page grid segment">
      <div class="ui three column stackable grid">
        <div class="column">
          <div class="ui header">&copy; @DateTime.Now.Year Catfish Cove</div>
        </div>
        <div class="six wide right floated aligned column">
          <h3 class="ui header"><a class="contact-link" asp-controller="Home" asp-action="Contact">Contact Us</a></h3>
          <address>
            1401 Armstrong Ford Rd <br />
            Belmont, NC, 28012 <br />
          </address>
          <p class="contact-link">704-825-3332</p>
        </div>
      </div>
    </div>
  </div>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-27802271-1']);
  _gaq.push(['_trackPageview']);

  (function () {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

  (function () {
    var menu = document.getElementById("mobile-menu");

    if (menu.addEventListener) {
      menu.addEventListener("click", toggleActiveMenu, false);
    } else {
      menu.attachEvent("onclick", toggleActiveMenu);
    }

    function toggleActiveMenu() {
      if (menu.className.indexOf(" active") === -1) {
        menu.className = menu.className + " active";
      } else {
        menu.className = menu.className.replace(" active", "");
      }
    }
  })();
</script>
@RenderSection("Scripts", false)
</body>

</html>
