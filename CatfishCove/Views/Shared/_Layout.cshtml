<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/CatfishCove.css")" rel="stylesheet" type="text/css" />    
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        @@media(max-width: 480px) {
          h1 {
            font-size: 12pt;
          }
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/CatfishCove.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-27802271-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                @Html.ActionLink("Catfish Cove Seafood", "Index", "Home", new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li id="Home">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li id="Menu">@Html.ActionLink("Menu", "Index", "Menu")</li>
                        <li id="Buffet">@Html.ActionLink("Sunday Buffet", "Index", "Buffet")</li>
                        <li id="Catering">@Html.ActionLink("Catering", "Catering", "Home")</li>
                        <li id="Directions">@Html.ActionLink("Directions", "Directions", "Home")</li>
                        <li id="Contact">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    <div class="pull-right" style="padding-top: 10px;">
                    @Html.Partial("_LogOnPartial")
                    </div>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <br />
        <br />
        <br />
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year.ToString() Catfish Cove | 1401 Armstrong Ford Rd, Belmont, NC, 28012 | 704-825-3332</p>
        </footer>
    </div>
</body>
</html>
